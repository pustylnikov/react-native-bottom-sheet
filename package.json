{
  "name": "@anvilapp/react-native-bottom-sheet",
  "version": "0.2.1",
  "description": "react native bottom sheet",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "yura.pustylnikov@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/pustylnikov/react-native-bottom-sheet",
  "repository": {
    "type": "git",
    "url": "https://github.com/pustylnikov/react-native-bottom-sheet.git"
  },
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "build": "yarn run lint && rm -rf ./dist && tsc --project tsconfig.app.json && cp ./{README.md,package.json} ./dist",
    "release-dry": "yarn run build && cd ./dist && npm publish --access public --dry-run",
    "release": "yarn run build && cd ./dist && npm publish --access public",
    "pod-install": "cd ios && pod install",
    "reinstall-modules": "rm -rf node_modules && yarn",
    "reset-cache": "yarn start --reset-cache",
    "delete-metro-tmp": "rm -rf /tmp/metro-*",
    "clean-android": "cd android && ./gradlew clean && ./gradlew cleanBuildCache && rm -rf ./android/app/build ./android/build",
    "clean-ios": "rm -rf ./ios/build"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-native": ">=0.60"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@react-native-community/eslint-config": "^1.0.0",
    "@types/jest": "^24.0.24",
    "@types/react-native": "^0.62.0",
    "@types/react-test-renderer": "16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-jest": "^24.9.0",
    "eslint": "^6.5.1",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "metro-react-native-babel-preset": "^0.58.0",
    "prettier": "^2.0.4",
    "react": "16.11.0",
    "react-native": "0.62.3",
    "react-test-renderer": "16.11.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint"
    }
  }
}
